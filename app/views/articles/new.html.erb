<% if @article.errors.any? %>
  <h2>the following are errors</h2>
  <ul>
    <% @article.errors.full_messages.each do |m| %>
      <li><%= m%></li>
    <% end %>
  </ul>
<% end %>
<h1> Creating new article</h1>
<%= form_with scope: :article, url: articles_path, local: true do |f| %>

  <div>
    <%= f.label :title %>
    <br>
    <br>
    <%= f.text_field :title %>
    <br>
    <br>
  </div>

  <div>
    <%= f.label :description %>
    <br>
    <br>
    <%= f.text_area :description %>
    <br>
    <br>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>
