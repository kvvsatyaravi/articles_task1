<div class="container">
<div class="jumbotron">
<h1> Signup for Task1</h1>
<div class="container">
  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name %>  alert-dismissible fade show" role="alert">
      <%= msg %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %> 
</div> 

<br>
<% if @user.errors.any? %>
  <h2>the following are errors</h2>
  <ul>
    <% @user.errors.full_messages.each do |m| %>
      <li><%= m %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with scope: :user, url: users_path, local: true do |f| %>

  <div>
    <%= f.label :username %>
    
    <br>
    <%= f.text_field :username %>
    <br>
  <br>
  </div>

  <div>
    <%= f.label :email %>
    
    <br>
    <%= f.email_field :email %>
    <br>
    <br>
  </div>

  <div>
    <%= f.label :password %>
    
    <br>
    <%= f.password_field :password %>
    <br>
    <br>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
<br><br>
<%= link_to ' Cancel and return to articles listing ', articles_path %>
</div>
</div>